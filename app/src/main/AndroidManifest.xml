<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.scorekeeperapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HandballActivity"
                  android:label="@string/handball"></activity>
        <activity android:name=".activities.HockeyActivity"
                  android:label="@string/hockey"></activity>
        <activity android:name=".activities.SoccerActivity"
                  android:label="@string/soccer"></activity>
        <activity android:name=".activities.BasketballActivity"
                  android:label="@string/basketball"></activity>
    </application>

</manifest>